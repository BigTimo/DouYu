<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:id="@+id/rl_user"
            android:layout_width="match_parent"
            android:layout_height="@dimen/d480"
            android:background="@drawable/usercenter_top_bg_day"
            android:paddingLeft="@dimen/margin_default"
            android:paddingRight="@dimen/margin_default">


            <ImageView
                android:id="@+id/iv_avatar"
                android:layout_width="@dimen/d240"
                android:layout_height="@dimen/d240"
                android:layout_centerVertical="true"
                android:src="@drawable/usercenter_default_avatar"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/d150"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_default"
                android:layout_toRightOf="@+id/iv_avatar"
                >

                <TextView
                    android:id="@+id/tv_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="专业的王师傅"
                    android:textColor="@color/white"
                    android:textSize="@dimen/d50"

                    />

                <TextView
                    android:id="@+id/tv_level"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/d63"
                    android:layout_alignParentBottom="true"
                    android:gravity="center"
                    android:paddingLeft="@dimen/d10"
                    android:paddingRight="@dimen/d10"
                    android:text="LV3"
                    android:textColor="@color/white"
                    android:textSize="@dimen/d45"
                    />

                <ImageView
                    android:layout_width="@dimen/d26"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/usercenter_grey_arrow"
                    />


            </RelativeLayout>


        </RelativeLayout>


        <include layout="@layout/layout_divider30"/>

        <com.app.douyu.view.TextImageView
            style="@style/UserTextStyle"
            android:drawableLeft="@drawable/icon_my_video"
            android:text="@string/user_fans"
            app:drawableLeftWidth="@dimen/d60"
            app:drawableRightWidth="@dimen/d26"/>

        <include layout="@layout/layout_divider30"/>

        <com.app.douyu.view.TextImageView
            style="@style/UserTextStyle"
            android:drawableLeft="@drawable/icon_my_video"
            android:text="@string/user_fans"
            app:drawableLeftWidth="@dimen/d60"
            app:drawableRightWidth="@dimen/d26"/>

        <include layout="@layout/layout_divider1"/>

        <com.app.douyu.view.TextImageView
            style="@style/UserTextStyle"
            android:drawableLeft="@drawable/icon_my_video"
            android:text="开黑语音"
            app:drawableLeftWidth="@dimen/d60"
            app:drawableRightWidth="@dimen/d26"/>

        <include layout="@layout/layout_divider1"/>

        <com.app.douyu.view.TextImageView
            style="@style/UserTextStyle"
            android:drawableLeft="@drawable/image_game"
            android:text="游戏中心"
            app:drawableLeftWidth="@dimen/d60"
            app:drawableRightWidth="@dimen/d26"/>


        <include layout="@layout/layout_divider30"/>


        <com.app.douyu.view.TextImageView
            style="@style/UserTextStyle"
            android:drawableLeft="@drawable/icon_anchor_recruit"
            android:text="主播招募"
            app:drawableLeftWidth="@dimen/d60"
            app:drawableRightWidth="@dimen/d26"/>

        <include layout="@layout/layout_divider1"/>

        <com.app.douyu.view.TextImageView
            style="@style/UserTextStyle"
            android:drawableLeft="@drawable/image_game"
            android:text="排行榜"
            app:drawableLeftWidth="@dimen/d60"
            app:drawableRightWidth="@dimen/d26"/>

        <include layout="@layout/layout_divider30"/>


        <com.app.douyu.view.TextImageView
            style="@style/UserTextStyle"
            android:drawableLeft="@drawable/icon_my_video"
            android:text="我的视频"
            app:drawableLeftWidth="@dimen/d60"
            app:drawableRightWidth="@dimen/d26"/>

        <include layout="@layout/layout_divider1"/>


        <com.app.douyu.view.TextImageView
            style="@style/UserTextStyle"
            android:drawableLeft="@drawable/icon_video_collection"
            android:text="视频收藏"
            app:drawableLeftWidth="@dimen/d60"
            app:drawableRightWidth="@dimen/d26"/>

        <include layout="@layout/layout_divider30"/>

        <com.app.douyu.view.TextImageView
            style="@style/UserTextStyle"
            android:drawableLeft="@drawable/icon_video_collection"
            android:text="我的账户"
            app:drawableLeftWidth="@dimen/d60"
            app:drawableRightWidth="@dimen/d26"/>

        <include layout="@layout/layout_divider30"/>

        <com.app.douyu.view.TextImageView
            style="@style/UserTextStyle"
            android:drawableLeft="@drawable/clock"
            android:text="开播提醒"
            app:drawableLeftWidth="@dimen/d60"
            app:drawableRightWidth="@dimen/d26"/>

    </LinearLayout>


</android.support.v4.widget.NestedScrollView>