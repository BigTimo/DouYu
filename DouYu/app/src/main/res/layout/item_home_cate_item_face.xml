<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="@dimen/d630"
              android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        app:cardElevation="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/iv_room"
                android:layout_width="match_parent"
                android:layout_height="@dimen/d520"
                android:scaleType="fitXY"
                tools:src="@drawable/ic_launcher"/>


            <com.app.douyu.view.TextImageView
                android:id="@+id/tv_count"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/d60"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/d18"
                android:layout_marginTop="@dimen/d18"
                android:background="@drawable/gray_h"
                android:drawableLeft="@drawable/home_reco_online_num_icon"
                android:drawablePadding="@dimen/d10"
                android:gravity="center_vertical|right"
                android:textColor="@color/white"
                android:textSize="@dimen/d24"
                app:drawableLeftWidth="@dimen/d30"
                tools:text="4396"
                />


        </RelativeLayout>

    </android.support.v7.widget.CardView>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d24"
        >

        <com.app.douyu.view.TextImageView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/d50"
            android:layout_marginRight="@dimen/d15"
            android:layout_toLeftOf="@+id/tv_city"
            android:drawableLeft="@drawable/home_reco_host_name_icon"
            android:drawablePadding="@dimen/d10"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textColor="@color/c333333"
            android:textSize="@dimen/d35"
            app:drawableLeftWidth="@dimen/d36"
            tools:text="名字有这么长"
            />


        <com.app.douyu.view.TextImageView
            android:id="@+id/tv_city"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/d50"
            android:layout_alignParentRight="true"
            android:drawableLeft="@drawable/icon_locate"
            android:drawablePadding="@dimen/d10"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textColor="@color/c999999"
            android:textSize="@dimen/d35"
            app:drawableLeftWidth="@dimen/d36"
            tools:text="名字有这么长"
            />


    </RelativeLayout>


</LinearLayout>